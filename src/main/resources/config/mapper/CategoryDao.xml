<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.rdc.dao.CategoryDao">

    <insert id="add" parameterType="hashmap">
        insert into blog_category(category_id,blog_id) values
        <foreach collection="keys" index="key" item="value" separator=",">
            (#{key},#{value})
        </foreach>
    </insert>

    <delete id="delete" parameterType="int">
        delete from blog_category where blog_id=#{blogId}
    </delete>
</mapper>